            <Button ImageSource="positivo.png" Clicked="MudarTabbed" />
            <Label Text="Click abaixo pro Abas2" TextColor="Blue" HorizontalOptions="CenterAndExpand" />
            <Button ImageSource="positivo.png" Clicked="MudarTabbed2" />
            <Label Text="Click abaixo pro Abas1 com Navigate" TextColor="Blue" HorizontalOptions="CenterAndExpand" />
            <Button ImageSource="positivo.png" Clicked="MudarTabbed3" />
            <Label Text="Click abaixo pro Abas2 com Navigate" TextColor="Blue" HorizontalOptions="CenterAndExpand" />
            <Button ImageSource="positivo.png" Clicked="MudarTabbed4" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
